<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/filmAppBackground">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_film_detail_poster"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabBackground"
        android:layout_toRightOf="@+id/iv_film_detail_poster"
        android:id="@+id/tv_title_tab"
        android:text="Title"
        android:textSize="22sp"
        android:textColor="@color/filmText"
        android:textAlignment="center"
        android:paddingBottom="3dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/filmText"
        android:textSize="16sp"
        android:textAlignment="center"
        android:id="@+id/tv_film_detail_title"
        android:layout_toRightOf="@+id/iv_film_detail_poster"
        android:layout_below="@+id/tv_title_tab"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/release_date_tab"
        android:textSize="20sp"
        android:textColor="@color/filmText"
        android:textAlignment="center"
        android:paddingBottom="3dp"
        android:layout_toRightOf="@id/iv_film_detail_poster"
        android:layout_below="@id/tv_film_detail_title"
        android:background="@color/tabBackground"
        android:text="Release Date"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_film_detail_release_date"
        android:layout_toRightOf="@id/iv_film_detail_poster"
        android:layout_below="@id/release_date_tab"
        android:textSize="14sp"
        android:textColor="@color/filmText"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ratings_tab"
        android:textSize="20sp"
        android:textColor="@color/filmText"
        android:textAlignment="center"
        android:paddingBottom="3dp"
        android:layout_toRightOf="@id/iv_film_detail_poster"
        android:layout_below="@id/tv_film_detail_release_date"
        android:background="@color/tabBackground"
        android:text="Rating"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_film_detail_rating"
        android:textSize="14sp"
        android:layout_toRightOf="@id/iv_film_detail_poster"
        android:layout_below="@id/ratings_tab"
        android:textColor="@color/filmText"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summary_tab"
        android:textSize="20sp"
        android:textColor="@color/filmText"
        android:textAlignment="center"
        android:paddingBottom="3dp"
        android:layout_below="@id/tv_film_detail_rating"
        android:layout_toRightOf="@id/iv_film_detail_poster"
        android:background="@color/tabBackground"
        android:text="Summary"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_film_detail_poster"
        android:layout_below="@id/summary_tab">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film_detail_overview"
            android:textSize="16sp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/filmText"

            />
    </ScrollView>

</RelativeLayout>